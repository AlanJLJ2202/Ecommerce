@page "{id:int}"
@model TecNM.Ecommerce.WebSite.Pages.Brands.Delete

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Delete Brand</h2>
            <form method="post">
                <input type="hidden" asp-for="Brand.id"/>
                <div class="form-group">
                    <label asp-for="Brand.Name"></label>
                    <input readonly asp-for="Brand.Name" class="form-control" maxlength="45"/>
                </div>
                
                <div class="form-group">
                    <label asp-for="Brand.Description"></label>
                    <input readonly asp-for="Brand.Description" class="form-control" maxlength="100"/>
                </div>
                @if (Model.Errors.Count > 0)
                {
                    
                }
                
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Delete</button>
                        <a class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        
        <div class="col-md-1"></div>
    </div>
</div>