@page
@model TecNM.Ecommerce.WebSite.Pages.Brands.ListModel

<div class="container-fluid">
    
    <form method="get">
        <div class="row">
            <div class="col-md-8">
            </div>
            <div class="col-md-4">
                <br/>
                <button id="btnSearch" class="btn btn-primary mr-3" asp-page="/Brands/Edit">
                    Buscar
                </button>
                @* <button id="btnAdd" class="btn btn-primary mr-3"> *@
                @*     Agregar *@
                @* </button> *@
                 <a a-asp-area="" asp-page="/Brands/Edit" asp-route-id="0" class="btn btn-primary" role="button">Agregar</a>
            </div>
            @* <div class="col-md-4"> *@
            @*     <br/> *@
            @*     <button id="btnAdd" class="btn btn-primary mr-3"> *@
            @*         Agregar *@
            @*     </button> *@
            @* </div> *@
        </div>
    </form>
    <div class="col-10">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
            @foreach (var brand in @Model.Brands)
            {
                <tr>
                    <td>
                        @brand.Name
                    </td>
                    <td>
                        @brand.Description
                    </td>
                    <td>
                        <a a-asp-area="" asp-page="/Brands/Edit" asp-route-id="@brand.id"
                           class="btn btn-primary" role="button">Edit</a>
                        <a a-asp-area="" asp-page="/Brands/Delete" asp-route-id="@brand.id"
                                                   class="btn btn-danger" role="button">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-1">

    </div>

</div>